<h1><%= @restaurant.name %></h1>

<div id="address">
  <%= @restaurant.address %>
</div>

<div id="phone_number">
  <%= @restaurant.phone_number %>
</div>

<div id="category">
  <%= @restaurant.category %>
</div>

<h3>Reviews:</h3>
<ul>
  <% @reviews.each do |review| %>
  <li><%= review.rating %> : <%= review.content %></li>
  <% end %>
</ul>


<h4>Add a new review:</h4>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Add a review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", restaurants_path%>
